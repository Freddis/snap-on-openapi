{
  "name": "strap-on-openapi",
  "author": "Alex Sarychev",
  "version": "1.0.25",
  "description": "Swiftly build type-checked OpenAPI applications with Zod and TypeScript",
  "type": "module",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "exports": {
    ".": [
      "./dist/index.js",
      "./dist/index.d.ts"
    ]
  },
  "scripts": {
    "build": "tsc && tsc-alias && cp -R ./assets ./dist",
    "test": "vitest --run",
    "test:coverage": "npm run test -- --coverage && rm -R ./html/coverage/html && mv ./html/coverage/spa ./html/coverage/html && vite preview --outDir html --open",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@hey-api/client-axios": "^0.9.1",
    "@hey-api/openapi-ts": "^0.76.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.67",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.0.2",
    "tsc-alias": "^1.8.16",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
